<UserControl x:Class="CarRentalManagment.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32">
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <TextBlock Text="{Binding Description}"
                               Margin="0,6,0,0"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap" />
                </StackPanel>

                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="18"
                        Padding="24"
                        Margin="0,24,0,0"
                        Effect="{DynamicResource CardShadowEffect}">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="72"
                                Height="72"
                                CornerRadius="36"
                                Background="{DynamicResource SecondaryBrush}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding DisplayName}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}" />
                        </Border>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="{Binding DisplayName}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding Email}"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="{Binding Username, StringFormat=Username: {0}}"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="18"
                        Padding="24"
                        Margin="0,24,0,0"
                        Effect="{DynamicResource CardShadowEffect}">
                    <StackPanel>
                        <StackPanel>
                            <TextBlock Text="Appearance" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Choose between light or dark theme to match your environment." Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,16,0,0">
                            <CheckBox Content="Enable dark mode"
                                      IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding SelectedTheme, StringFormat=Current: {0}}"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="18"
                        Padding="24"
                        Margin="0,24,0,0"
                        Effect="{DynamicResource CardShadowEffect}">
                    <StackPanel>
                        <StackPanel>
                            <TextBlock Text="Language" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Select your preferred language for the interface." Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6,0,0" />
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding Languages}"
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  Width="220"
                                  Margin="0,16,0,0" />
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,24,0,0">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource SuccessBrush}"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringNullToVisibilityConverter}}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{DynamicResource ErrorBrush}"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullToVisibilityConverter}}"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center" />
                    <Button Content="Save changes"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="24,10"
                            Margin="16,0,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
