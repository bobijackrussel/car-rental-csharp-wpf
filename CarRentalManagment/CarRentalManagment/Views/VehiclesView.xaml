<UserControl x:Class="CarRentalManagment.Views.VehiclesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:CarRentalManagment.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="#f5f5f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="White"
                CornerRadius="20"
                Padding="24"
                Margin="32,32,32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#262645" />
                    <TextBlock Text="{Binding Description}"
                               FontSize="14"
                               Foreground="#5a5a7b"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ï¼‹ Add Vehicle"
                        Command="{Binding AddVehicleCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Center"
                        Visibility="{Binding CanAddVehicle, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="32,0,32,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="20" Padding="24" Margin="0,0,16,0">
                <views:VehicleListView DataContext="{Binding VehicleList}" />
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="20" Padding="24">
                <views:VehicleDetailsView DataContext="{Binding VehicleDetails}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
