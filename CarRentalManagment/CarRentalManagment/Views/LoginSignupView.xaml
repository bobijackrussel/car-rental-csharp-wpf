<UserControl x:Class="CarRentalManagment.Views.LoginSignupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:CarRentalManagment.Utilities.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#1e1e2f">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Background="#24243e"
                    Padding="40"
                    VerticalAlignment="Center">
            <TextBlock Text="Car Rental Management"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White" />
            <TextBlock Text="Manage your fleet, reservations, and customers with ease."
                       FontSize="14"
                       Foreground="#cfcfe0"
                       TextWrapping="Wrap"
                       Margin="0,12,0,0" />
        </StackPanel>

        <Border Grid.Column="1"
                Background="White"
                CornerRadius="20,0,0,20"
                Margin="0,30,30,30"
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#262645"
                           Margin="0,0,0,20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Login" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                    <Setter Property="Text" Value="Create Account" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Text="Email"
                           Foreground="#555"
                           Margin="0,0,0,4" />
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         MinWidth="220"
                         Padding="8"
                         Style="{StaticResource RoundedTextBoxStyle}" />

                <TextBlock Grid.Row="2"
                           Text="Password"
                           Foreground="#555"
                           Margin="0,16,0,4" />
                <PasswordBox Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Padding="8"
                             Style="{StaticResource RoundedPasswordBoxStyle}"
                             behaviors:PasswordBoxHelper.BindPassword="True"
                             behaviors:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />

                <StackPanel Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Padding" Value="8" />
                        </Style>
                    </StackPanel.Resources>

                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="Confirm Password"
                                   Foreground="#555"
                                   Margin="0,16,0,4" />
                        <PasswordBox Padding="8"
                                     Style="{StaticResource RoundedPasswordBoxStyle}"
                                     behaviors:PasswordBoxHelper.BindPassword="True"
                                     behaviors:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <StackPanel Width="180">
                                <TextBlock Text="First Name" Foreground="#555" Margin="0,0,0,4" />
                                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Width="180" Margin="12,0,0,0">
                                <TextBlock Text="Last Name" Foreground="#555" Margin="0,0,0,4" />
                                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#b00020"
                               Margin="0,12,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="Content" Value="Need an account?" />
                                <Setter Property="Command" Value="{Binding ToggleModeCommand}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                        <Setter Property="Content" Value="Already registered?" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Style="{StaticResource PrimaryButtonStyle}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Setter Property="Content" Value="Login" />
                                <Setter Property="Command" Value="{Binding LoginCommand}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                        <Setter Property="Content" Value="Sign Up" />
                                        <Setter Property="Command" Value="{Binding SignUpCommand}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </StackPanel.Resources>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
