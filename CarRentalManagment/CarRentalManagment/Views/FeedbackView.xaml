<UserControl x:Class="CarRentalManagment.Views.FeedbackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <converters:RatingToBrushConverter x:Key="RatingToBrushConverter" />
    </UserControl.Resources>

    <Grid Background="#f5f5f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="20" Padding="24" Margin="32,32,32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#262645" />
                    <TextBlock Text="{Binding Description}"
                               FontSize="14"
                               Foreground="#5a5a7b"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Margin="32,0,32,32" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="20" Padding="28" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Share your experience"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#262645" />
                        <TextBlock Text="Let us know how your rental went."
                                   FontSize="13"
                                   Foreground="#6a6a8a"
                                   Margin="0,4,0,20" />

                        <TextBlock Text="Star rating"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#41415f" />
                        <ItemsControl ItemsSource="{Binding RatingOptions}"
                                      Margin="0,8,0,16">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SetRatingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="4"
                                            Cursor="Hand">
                                        <TextBlock Text="★"
                                                   FontSize="34"
                                                   FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource RatingToBrushConverter}">
                                                    <Binding Path="." />
                                                    <Binding Path="DataContext.Rating" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Reservation (optional)"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#41415f" />
                        <ComboBox ItemsSource="{Binding Reservations}"
                                  SelectedItem="{Binding SelectedReservation}"
                                  DisplayMemberPath="DisplayName"
                                  Margin="0,8,0,20"
                                  Height="36" />
                        <TextBlock Text="You can tie your feedback to a recent reservation."
                                   FontSize="12"
                                   Foreground="#8b8ba3"
                                   Visibility="{Binding HasReservations, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <TextBlock Text="No active reservations available."
                                   FontSize="12"
                                   Foreground="#8b8ba3"
                                   Visibility="{Binding HasReservations, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

                        <TextBlock Text="Comment"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#41415f"
                                   Margin="0,24,0,0" />
                        <Border Background="#f5f5fb"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8,0,4">
                            <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="120"
                                     FontSize="14" />
                        </Border>
                        <TextBlock Text="{Binding CommentLengthDisplay}"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   Foreground="#8b8ba3"
                                   Margin="0,0,0,12" />

                        <Border Background="#fdecec"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0,0,0,12"
                                Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#d64545"
                                       FontSize="13"
                                       TextWrapping="Wrap" />
                        </Border>

                        <Border Background="#e6f7ef"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0,0,0,12"
                                Visibility="{Binding SuccessMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="#1f8a5b"
                                       FontSize="13"
                                       TextWrapping="Wrap" />
                        </Border>

                        <Button Content="Submit Feedback"
                                Command="{Binding SubmitFeedbackCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Height="42"
                                HorizontalAlignment="Left" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="20" Padding="28">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Vertical">
                            <TextBlock Text="Your feedback history"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#262645" />
                            <TextBlock Text="Review past comments you've shared with us."
                                       FontSize="12"
                                       Foreground="#7a7a99"
                                       Margin="0,4,0,16" />
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12" />
                                </Style>
                            </Grid.Resources>

                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding FeedbackHistory}"
                                              Visibility="{Binding IsHistoryEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f6f6ff" Padding="16" Margin="0,0,0,12">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding RatingStars}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#f5b301" />
                                                        <TextBlock Text="•"
                                                                   FontSize="16"
                                                                   Foreground="#bbbbcc"
                                                                   Margin="6,0" />
                                                        <TextBlock Text="{Binding CreatedDisplay}"
                                                                   FontSize="12"
                                                                   Foreground="#747492" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding ReservationDisplay}"
                                                               FontSize="12"
                                                               Foreground="#7a7a99"
                                                               Margin="0,6,0,0"
                                                               Visibility="{Binding ReservationDisplay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />
                                                    <TextBlock Text="{Binding Comment}"
                                                               FontSize="13"
                                                               Foreground="#3f3f5f"
                                                               Margin="0,8,0,0"
                                                               TextWrapping="Wrap"
                                                               Visibility="{Binding HasComment, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsHistoryEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="No feedback shared yet."
                                           FontSize="14"
                                           Foreground="#7a7a99"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Submit your first review to see it here."
                                           FontSize="12"
                                           Foreground="#9a9ab5"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0" />
                            </StackPanel>

                            <Border Background="#CCFFFFFF"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    CornerRadius="12">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical"
                                            Margin="24">
                                    <ProgressBar Width="180"
                                                 IsIndeterminate="True"
                                                 Height="6"
                                                 Margin="0,0,0,12" />
                                    <TextBlock Text="Loading your feedback..."
                                               FontSize="12"
                                               Foreground="#6f6f88"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
