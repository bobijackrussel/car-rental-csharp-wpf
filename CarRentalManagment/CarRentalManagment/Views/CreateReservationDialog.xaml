<Window x:Class="CarRentalManagment.Views.CreateReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
        mc:Ignorable="d"
        Title="Create Reservation"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#f5f5f9"
        d:DesignWidth="460"
        d:DesignHeight="520">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </Window.Resources>

    <Border Background="White" CornerRadius="16" Padding="28">
        <StackPanel Spacing="18">
            <StackPanel>
                <TextBlock Text="Create a reservation"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#262645" />
                <TextBlock Text="Select your vehicle and preferred dates to reserve."
                           Foreground="#6b6b8a"
                           Margin="0,4,0,0" />
            </StackPanel>

            <StackPanel Spacing="12">
                <StackPanel Visibility="{Binding ShowVehicleSelector, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Spacing="6">
                    <TextBlock Text="Vehicle"
                               Foreground="#6b6b8a" />
                    <ComboBox ItemsSource="{Binding AvailableVehicles}"
                              SelectedItem="{Binding SelectedVehicle}"
                              DisplayMemberPath="DisplayName"
                              Padding="10"
                              Background="#f2f4ff"
                              BorderThickness="0"
                              MinWidth="320" />
                </StackPanel>

                <StackPanel Visibility="{Binding ShowVehicleSelector, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                            Spacing="4">
                    <TextBlock Text="Vehicle"
                               Foreground="#6b6b8a" />
                    <Border Background="#f2f4ff" Padding="10" CornerRadius="12">
                        <TextBlock Text="{Binding SelectedVehicle.DisplayName}" FontWeight="SemiBold" />
                    </Border>
                </StackPanel>

                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="6">
                        <TextBlock Text="Start date"
                                   Foreground="#6b6b8a" />
                        <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                    Padding="8"
                                    Background="#f2f4ff"
                                    BorderThickness="0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="6">
                        <TextBlock Text="End date"
                                   Foreground="#6b6b8a" />
                        <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                    Padding="8"
                                    Background="#f2f4ff"
                                    BorderThickness="0" />
                    </StackPanel>
                </Grid>

                <StackPanel Spacing="4">
                    <TextBlock Text="Notes (optional)"
                               Foreground="#6b6b8a" />
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             AcceptsReturn="True"
                             Height="80"
                             TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>

            <Border Background="#f2f4ff" CornerRadius="12" Padding="14">
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Daily rate"
                                   Foreground="#6b6b8a" />
                        <TextBlock Text="{Binding VehicleRateDisplay}" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Duration"
                                   Foreground="#6b6b8a" />
                        <TextBlock Text="{Binding RentalDaysDisplay}" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Total"
                                   Foreground="#6b6b8a" />
                        <TextBlock Text="{Binding TotalAmountDisplay}"
                                   FontWeight="Bold"
                                   Foreground="#262645" />
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#d64545"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" />
                <Button Content="Reserve Vehicle"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
