<UserControl x:Class="CarRentalManagment.Views.VehicleListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="500">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <DropShadowEffect x:Key="CardDropShadow" BlurRadius="16" ShadowDepth="4" Opacity="0.15" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBox Width="260"
                     Margin="0,0,12,0"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Search vehicles">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="12"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="#9a9ab8"
                                       Margin="14,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ZeroToVisibilityConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <ComboBox Width="200"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSortOption}"
                      HorizontalAlignment="Left" />
            <Button Content="Clear"
                    Command="{Binding ClearSearchCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="16,8"
                    Margin="12,0,0,0" />
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="16,8"
                    Margin="12,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Margin="0,16,0,12"
                   Foreground="#6b6b8a"
                   FontSize="13"
                   Text="{Binding Vehicles.Count, StringFormat='Found {0} vehicles'}" />

        <Grid Grid.Row="2">
            <Grid.Resources>
                <Style TargetType="ScrollViewer">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox ItemsSource="{Binding VehiclesView}"
                     SelectedItem="{Binding SelectedVehicle, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0"
                     Margin="0,0,0,16">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="220" ItemHeight="260" MinWidth="200" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="220"
                                Height="260"
                                CornerRadius="16"
                                Background="#f8f8ff"
                                Margin="8"
                                Padding="0"
                                Cursor="Hand"
                                Effect="{StaticResource CardDropShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" ClipToBounds="True">
                                    <Image Source="{Binding PrimaryPhotoUrl}"
                                           Stretch="UniformToFill"
                                           Visibility="{Binding HasPrimaryPhoto, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Border Background="#ececf7"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Visibility="{Binding HasPrimaryPhoto, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <TextBlock Text="No photo"
                                                   Foreground="#8c8cb3"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                    </Border>
                                </Grid>

                                <StackPanel Grid.Row="1" Padding="16" Spacing="6">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="SemiBold"
                                               Foreground="#262645"
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding Subtitle}"
                                               FontSize="12"
                                               Foreground="#6b6b8a"
                                               TextWrapping="Wrap" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding DailyRateDisplay}"
                                                   FontWeight="Bold"
                                                   Foreground="#4e63ff" />
                                        <TextBlock Text="/day"
                                                   Foreground="#6b6b8a"
                                                   FontSize="12" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding PlateNumber}"
                                               FontSize="12"
                                               Foreground="#6b6b8a" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True"
                             Width="160"
                             Height="4"
                             Margin="0,0,12,0" />
                <TextBlock Text="Loading vehicles..."
                           FontSize="12"
                           Foreground="#6b6b8a" />
            </StackPanel>

            <Border Grid.Row="0"
                    Background="#ffffffdd"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                    CornerRadius="12"
                    Padding="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="320">
                <StackPanel>
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#d64545"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <Button Content="Try again"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>
            </Border>

            <TextBlock Grid.Row="0"
                       Text="No vehicles match your filters yet."
                       Foreground="#6b6b8a"
                       FontStyle="Italic"
                       Visibility="{Binding Vehicles.Count, Converter={StaticResource ZeroToVisibilityConverter}}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>
