<UserControl x:Class="CarRentalManagment.Views.VehicleDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="12">
            <TextBlock Text="Vehicle Details"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#262645" />
            <Border Background="#e2e6ff"
                    Padding="12,4"
                    CornerRadius="12"
                    Visibility="{Binding HasVehicle, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding Vehicle.Status}"
                           Foreground="#4e63ff"
                           FontWeight="SemiBold" />
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Background="#f2f4ff"
                            CornerRadius="16"
                            Height="220"
                            Margin="0,0,0,12"
                            Visibility="{Binding HasVehicle, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="{Binding SelectedPhotoUrl}"
                               Stretch="UniformToFill"
                               ClipToBounds="True"
                               SnapsToDevicePixels="True" />
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Photos}"
                             SelectedItem="{Binding SelectedPhoto, Mode=TwoWay}"
                             Margin="0,12,0,0"
                             Background="Transparent"
                             BorderThickness="0"
                             Visibility="{Binding Photos.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="4" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="2" CornerRadius="8">
                                    <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#d5d5f5" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                <Setter Property="BorderBrush" Value="#4e63ff" />
                                                <Setter Property="BorderThickness" Value="2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    </Border.Style>
                                    <Image Source="{Binding Url}"
                                           Width="72"
                                           Height="52"
                                           Stretch="UniformToFill"
                                           ClipToBounds="True" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="2"
                               Text="{Binding ErrorMessage}"
                               Foreground="#d64545"
                               Margin="0,8,0,0"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                               TextWrapping="Wrap" />
                </Grid>

                <StackPanel Visibility="{Binding HasVehicle, Converter={StaticResource BooleanToVisibilityConverter}}" Spacing="8">
                    <TextBlock Text="{Binding Vehicle.DisplayName}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#262645" />
                    <TextBlock Text="{Binding Vehicle.Subtitle}"
                               Foreground="#6b6b8a"
                               FontSize="12" />
                    <TextBlock Text="{Binding Vehicle.Description}"
                               TextWrapping="Wrap"
                               Foreground="#4f4f6d"
                               FontSize="13" />

                    <UniformGrid Columns="2" Margin="0,12,0,0" Rows="3">
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Daily Rate" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.DailyRateDisplay}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Plate" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.PlateNumber}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Seats" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.Seats}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Doors" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.Doors}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Fuel" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.FuelDisplay}" FontWeight="SemiBold" />
                        </StackPanel>
                        <StackPanel Margin="0,8" Spacing="4">
                            <TextBlock Text="Transmission" Foreground="#6b6b8a" FontSize="12" />
                            <TextBlock Text="{Binding Vehicle.TransmissionDisplay}" FontWeight="SemiBold" />
                        </StackPanel>
                    </UniformGrid>

                    <Button Content="Reserve This Vehicle"
                            Command="{Binding ReserveCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left" />
                </StackPanel>

                <TextBlock Text="Select a vehicle from the list to see its details."
                           Foreground="#6b6b8a"
                           FontStyle="Italic"
                           Visibility="{Binding HasVehicle, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                           TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
