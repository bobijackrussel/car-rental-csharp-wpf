<UserControl x:Class="CarRentalManagment.Views.ViolationReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="#f5f5f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="20" Padding="24" Margin="32,32,32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#262645" />
                    <TextBlock Text="{Binding Description}"
                               FontSize="14"
                               Foreground="#5a5a7b"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Margin="32,0,32,32"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="20" Padding="28" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Submit a violation report"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#262645" />
                        <TextBlock Text="Provide a few details about what happened so we can investigate."
                                   FontSize="13"
                                   Foreground="#6a6a8a"
                                   Margin="0,4,0,20" />

                        <TextBlock Text="Reservation"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#41415f" />
                        <ComboBox ItemsSource="{Binding Reservations}"
                                  SelectedItem="{Binding SelectedReservation}"
                                  DisplayMemberPath="DisplayName"
                                  Margin="0,8,0,6"
                                  Height="36" />
                        <TextBlock Text="Choose the reservation this report is for."
                                   FontSize="12"
                                   Foreground="#8b8ba3"
                                   Visibility="{Binding HasReservations, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <TextBlock Text="No eligible reservations found."
                                   FontSize="12"
                                   Foreground="#8b8ba3"
                                   Visibility="{Binding HasReservations, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

                        <Grid Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Violation type"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#41415f" />
                                <ComboBox ItemsSource="{Binding TypeOptions}"
                                          SelectedItem="{Binding SelectedType}"
                                          Margin="0,8,16,0"
                                          Height="36" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Severity"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#41415f" />
                                <ComboBox ItemsSource="{Binding SeverityOptions}"
                                          SelectedItem="{Binding SelectedSeverity}"
                                          Margin="0,8,0,0"
                                          Height="36" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Description"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#41415f"
                                   Margin="0,24,0,0" />
                        <Border Background="#f5f5fb"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8,0,4">
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="140"
                                     FontSize="14" />
                        </Border>
                        <TextBlock Text="{Binding DescriptionLengthDisplay}"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   Foreground="#8b8ba3"
                                   Margin="0,0,0,12" />

                        <Border Background="#fdecec"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0,0,0,12"
                                Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#d64545"
                                       FontSize="13"
                                       TextWrapping="Wrap" />
                        </Border>

                        <Border Background="#e6f7ef"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0,0,0,12"
                                Visibility="{Binding SuccessMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="#1f8a5b"
                                       FontSize="13"
                                       TextWrapping="Wrap" />
                        </Border>

                        <Button Content="Submit report"
                                Command="{Binding SubmitCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Height="42"
                                HorizontalAlignment="Left" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="20" Padding="28">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Vertical">
                            <TextBlock Text="Reported violations"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#262645" />
                            <TextBlock Text="Track submissions you've already shared with us."
                                       FontSize="12"
                                       Foreground="#7a7a99"
                                       Margin="0,4,0,16" />
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12" />
                                </Style>
                            </Grid.Resources>

                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding ViolationHistory}">
                                    <ItemsControl.Style>
                                        <Style TargetType="ItemsControl">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ItemsControl">
                                                        <ItemsPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ItemsControl.Style>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f7f7ff"
                                                    Padding="16"
                                                    Margin="0,0,0,12">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Type}"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#303060" />
                                                        <TextBlock Text=" • "
                                                                   FontSize="14"
                                                                   Foreground="#8b8ba3" />
                                                        <TextBlock Text="{Binding Severity}"
                                                                   FontSize="14"
                                                                   Foreground="#8b8ba3" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding ReservationDisplay}"
                                                               FontSize="12"
                                                               Foreground="#7a7a99"
                                                               Margin="0,2,0,6" />
                                                    <TextBlock Text="{Binding Description}"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"
                                                               Foreground="#404060"
                                                               Visibility="{Binding Description, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,8,0,0"
                                                                VerticalAlignment="Center"
                                                                Spacing="8">
                                                        <Border Background="#fff4d9"
                                                                Padding="6,2"
                                                                CornerRadius="8">
                                                            <TextBlock Text="{Binding Status}"
                                                                       FontSize="11"
                                                                       Foreground="#a96a00" />
                                                        </Border>
                                                        <TextBlock Text="{Binding ReportedAtDisplay}"
                                                                   FontSize="11"
                                                                   Foreground="#8b8ba3" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <Border Background="#f5f5fb"
                                    Padding="20"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsHistoryEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="No violation reports yet"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#4a4a6a"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="Any reports you submit will appear here for easy reference."
                                               FontSize="12"
                                               Foreground="#8b8ba3"
                                               Margin="0,4,0,0"
                                               TextAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
